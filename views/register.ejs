<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="images/img-01.png" alt="IMG">
            </div>

            <form class="login100-form" action="/register" method="POST">
                <span class="login100-form-title">
                    KULLANICI OLUŞTUR
                </span>
                <% if (validate_errors) { %>
                    <%- include('./partials/_mesaj') %>
                        <% } %>

                            <div class="wrap-input100 validate-input">
                                <input class="input100" value="<%- typeof ad != 'undefined' ? ad : '' %>" type="text"
                                    name="ad" placeholder="Ad">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </span>

                            </div>

                            <div class="wrap-input100 validate-input">
                                <input class="input100" value="<%- typeof soyad != 'undefined' ? soyad : '' %>"
                                    type="text" name="soyad" placeholder="Soyad">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </span>

                            </div>


                            <div class="wrap-input100 validate-input">
                                <input class="input100" value="<%- typeof email != 'undefined' ? email : '' %>"
                                    type="text" name="email" placeholder="Email">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </span>

                            </div>

                            <div class="wrap-input100 validate-input">
                                <input class="input100" value="<%- typeof sifre != 'undefined' ? sifre : '' %>"
                                    type="text" name="sifre" placeholder="Şifre">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>

                            </div>

                            <div class="wrap-input100 validate-input">
                                <input class="input100" value="<%- typeof reSifre != 'undefined' ? reSifre : '' %>"
                                    type="password" name="reSifre" placeholder="Şifre Tekrar">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="container-login100-form-btn">
                                <button type="submit" class="login100-form-btn">
                                    Kayıt Ol
                                </button>
                            </div>

                            <div class="text-center pt-2">
                                <a class="txt2" href="login">
                                    Zaten hesabınız var mı?Giriş yapın!
                                    <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                                </a>
                            </div>
            </form>
        </div>
    </div>
</div>